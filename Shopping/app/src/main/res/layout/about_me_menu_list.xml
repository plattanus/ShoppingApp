<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4D403"
    android:orientation="vertical">

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout
            android:id="@+id/menu_cart"
            style="@style/single_layout">

            <TextView
                style="@style/usertext"
                android:text="@string/my_cart" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout
            android:id="@+id/menu_bought"
            style="@style/single_layout">

            <TextView
                style="@style/usertext"
                android:text="@string/my_bought" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">
        <!-- 下圆角-->
        <LinearLayout
            android:id="@+id/menu_user"
            style="@style/single_layout">

            <TextView
                style="@style/usertext"
                android:text="@string/user_center" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout
            android:id="@+id/menu_about"
            style="@style/single_layout">

            <TextView
                style="@style/usertext"
                android:text="@string/about" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout
            android:id="@+id/menu_setting"
            style="@style/single_layout">

            <TextView
                style="@style/usertext"
                android:text="@string/setting" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginBottom="@dimen/cardview_compat_inset_shadow">

    </TextView>
</LinearLayout>
